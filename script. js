// Load credits from localStorage
let credits = parseInt(localStorage.getItem("credits")) || 0;
const display = document.getElementById("creditAmount");
display.innerText = credits;

// Sections
function openTasks() {
    document.getElementById("taskSection").style.display = "block";
    document.getElementById("creditSection").style.display = "none";
}
function closeTasks() {
    document.getElementById("taskSection").style.display = "none";
}

function openCredits() {
    document.getElementById("creditSection").style.display = "block";
    document.getElementById("taskSection").style.display = "none";
}
function closeCredits() {
    document.getElementById("creditSection").style.display = "none";
}

// Check In Button
document.getElementById("checkinBtn").addEventListener("click", function() {
    credits += 40;
    display.innerText = credits;
    localStorage.setItem("credits", credits);
    alert("✅ Check-in successful! ৪০ টাকা যোগ হলো।");
});

// Deposit
function deposit() {
    let amount = parseInt(prompt("কত টাকা Deposit করবেন?"));
    if (!isNaN(amount) && amount > 0) {
        credits += amount;
        display.innerText = credits;
        localStorage.setItem("credits", credits);
        alert("✅ " + amount + " টাকা Deposit হলো!");
    } else {
        alert("⚠️ সঠিক সংখ্যা দিন!");
    }
}

// Withdraw
function withdraw() {
    let amount = parseInt(prompt("কত টাকা Withdraw করবেন?"));
    if (!isNaN(amount) && amount > 0) {
        if (credits >= amount) {
            credits -= amount;
            display.innerText = credits;
            localStorage.setItem("credits", credits);
            alert("✅ " + amount + " টাকা Withdraw হলো!");
        } else {
            alert("⚠️ Balance পর্যাপ্ত নেই!");
        }
    } else {
        alert("⚠️ সঠিক সংখ্যা দিন!");
    }
}
